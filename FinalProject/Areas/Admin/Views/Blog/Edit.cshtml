@model FinalProject.Areas.Admin.ViewModels.Blog.BlogEditVM

<div class="container mt-5">

    <div class="image">
        <img src="~/assets/images/@Model.ExistImage" style="width:200px; height:150px" />

    </div>

    <form class="form-inline" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label for="UploadImage">Slider Images</label>
            <input type="file" id="UploadImage" asp-for="UploadImage" class="form-control" multiple />
            <span asp-validation-for="UploadImage" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" asp-for="Description" style="d-block;">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" asp-for="Title" style="d-block;">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary mt-5">Submit</button>
        <a asp-action="Index" class="btn btn-light mt-5">Cancel</a>

    </form>

</div>


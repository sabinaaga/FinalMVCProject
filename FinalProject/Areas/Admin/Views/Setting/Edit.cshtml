@model FinalProject.Areas.Admin.ViewModels.Setting.EditSettingVM

<div class="container mt-5">
    <h2>Edit Setting</h2>

    <form asp-action="Edit">
        <div class="form-group">
            <label for="Key">Key</label>
            <input type="text" class="form-control" id="Key" name="Key" value="@Model.Key" required />
        </div>

        <div class="form-group">
            <label for="Value">Value</label>
            <input type="text" class="form-control" id="Value" name="Value" value="@Model.Value" required />
        </div>


        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>

    <a asp-action="Index" class="btn btn-light mt-3">Back to List</a>
</div>

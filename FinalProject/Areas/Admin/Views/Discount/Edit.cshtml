@model FinalProject.Areas.Admin.ViewModels.Discount.DiscountEditVM

<form class="form-inline" method="post" asp-action="Edit">
    <div class="form-group">
        <label for="percentage">Percentage</label>
        <input type="text" class="form-control" id="percentage" asp-for="Percentage">
        <span asp-validation-for="Percentage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-light">Cancel</a>

</form>

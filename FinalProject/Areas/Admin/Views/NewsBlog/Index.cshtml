@model IEnumerable<FinalProject.Areas.Admin.ViewModels.NewsBlog.NewsBlogVM>
<div class="container-fluid mt-3">
    <h1 class="mt-30 " style="color:red">NewsBlogVM</h1>
    <div class="table-responsive">
        <a asp-action="Create" type="button" class="btn btn-success">Create</a>
        <table class="table table-hover">
            <thead class="">
            <th>
                Image
            </th>
            <th>
                Description
            </th>
            <th>
                Title
            </th>
            <th>
                Options
            </th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/assets/images/@item.Imeg" style="width:200px; height:150ox" />
                        </td>

                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" type="button" class="btn btn-info">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-primary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>



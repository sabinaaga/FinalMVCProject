        <a asp-controller="Home" asp-action="Index">
            <div class="navbar-logo">
                <img src="https://static.insales-cdn.com/r/RMWaNXYgts8/rs:fill-down:100:100:1/q:100/plain/files/1/2899/38603603/original/4__1__fbd459516ad35b584f3ef3dc5c22024a.png@png"

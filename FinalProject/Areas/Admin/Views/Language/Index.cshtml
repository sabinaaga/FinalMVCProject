@model IEnumerable<FinalProject.Areas.Admin.ViewModels.Language.LanguageVM>
<div class="container-fluid mt-3">
    <h1 class="mt-30 " style="color:red">Language</h1>
    <div class="table-responsive">
        <a asp-action="Create" type="button" class="btn btn-success">Create</a>
        <table class="table table-hover">
            <thead class="">
            <th>
                Name
            </th>
            <th>
                Options
            </th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>


                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-primary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


